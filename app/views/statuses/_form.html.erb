
<%= render 'shared/form_error', obj: @status %>


<div class="profile-background container-fluid">
  <div class="row">
    <div class="col-md-2 col-xs-2"></div>
    <div class="col-md-8 col-xs-8 my-tweets well">
      <h2>New Status</h2>
      <hr/>
      <%= form_for(@status, class: "form-horizontal") do |f| %>  
        <div class="form-group">
          <%= f.label :body, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_area :body, placeholder: "tweet something",class: "form-control" %>
          </div>
        </div>
        <br/>
        <br/>
        <br/>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Tweet it", class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>    
  </div>
</div>